resource "aws_security_group" "ABCplace_sg" {
  vpc_id = aws_vpc.ABCplace_vpc.id
  name   = "ABCplace_SecurityGroup"

  # SSH (porta 22)
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]  
  }

  # Apache
  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]  
  }

  # Sa√≠da
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "ABCplace_SecurityGroup"
  }
}
